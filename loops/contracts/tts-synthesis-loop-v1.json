{
  "loopId": "tts-synthesis-loop-v1",
  "version": "1.0.0",
  "displayName": "TTS Synthesis Loop",
  "description": "Synthesizes text responses into audio output using configured voice persona with latency optimization.",
  "ownerAgent": "tts-agent",
  "category": "integration-voice",
  "tier": "A",
  "dependencyLayer": "integration",
  "priority": 63,
  "triggerTypes": [
    "event"
  ],
  "triggerClass": "always-on",
  "cadence": {
    "default": "event-driven"
  },
  "entryCriteria": [
    "text_response_ready_for_voice_synthesis"
  ],
  "hardStops": [
    "budget_exhausted",
    "operator_abort",
    "tts-synthesis-loop_critical_failure"
  ],
  "requiredContext": [
    "AGENTS.md",
    "integration-voice_context"
  ],
  "thinkingPolicy": {
    "default": "medium",
    "escalateTo": "high",
    "escalateOn": [
      "transcription_confidence_low"
    ],
    "deescalateOn": [
      "budget_pressure"
    ]
  },
  "allowedTools": [
    "voice.stream",
    "stt.transcribe",
    "tts.synthesize",
    "memory.write"
  ],
  "forbiddenTools": [
    "host.exec",
    "browser.navigate",
    "email.send"
  ],
  "toolTierBudget": "tier-1",
  "approvalPoints": [],
  "approvalRequired": false,
  "maxSteps": 12,
  "maxDurationSec": 300,
  "riskTier": "safe",
  "successCriteria": [
    "text_synthesized_to_audio_with_target_latency"
  ],
  "rollbackPlan": "End voice stream gracefully and log incomplete interaction.",
  "fallbackLoopChain": [],
  "terminationPolicy": "safe_stop_and_report",
  "writebacks": {
    "memory": true,
    "logs": true,
    "actionArtifacts": true,
    "auditTrail": false
  },
  "outputContract": {
    "summaryRequired": true,
    "confidenceRequired": true,
    "evidenceRequired": false,
    "actionsRequired": false,
    "nextRequired": false
  },
  "loopLifecycleStates": [
    "queued",
    "preflight",
    "context-build",
    "reason",
    "act",
    "verify",
    "commit",
    "archive"
  ],
  "guardrails": {
    "confidenceThreshold": 0.5,
    "toolFailureBudget": 3,
    "sideEffectApprovalRequired": false
  },
  "composition": {
    "canBeCalledBy": [
      "ralph-loop-v1"
    ],
    "canCall": []
  }
}
