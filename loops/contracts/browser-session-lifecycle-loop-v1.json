{
  "loopId": "browser-session-lifecycle-loop-v1",
  "version": "1.0.0",
  "displayName": "Browser Session Lifecycle Loop",
  "description": "Manages isolated browser profile lifecycle including creation, suspension, resumption, and teardown.",
  "ownerAgent": "browser-control-agent",
  "category": "integration-browser",
  "tier": "A",
  "dependencyLayer": "integration",
  "priority": 59,
  "triggerTypes": [
    "event",
    "manual"
  ],
  "triggerClass": "always-on",
  "cadence": {
    "default": "on-demand"
  },
  "entryCriteria": [
    "browser_session_action_requested_create_or_teardown"
  ],
  "hardStops": [
    "budget_exhausted",
    "operator_abort",
    "browser-session-lifecycle-loop_critical_failure"
  ],
  "requiredContext": [
    "AGENTS.md",
    "integration-browser_context"
  ],
  "thinkingPolicy": {
    "default": "medium",
    "escalateTo": "high",
    "escalateOn": [
      "page_injection_detected"
    ],
    "deescalateOn": [
      "budget_pressure"
    ]
  },
  "allowedTools": [
    "browser.navigate",
    "browser.screenshot",
    "browser.readDom",
    "memory.write"
  ],
  "forbiddenTools": [
    "host.exec",
    "email.send",
    "browser.formSubmit"
  ],
  "toolTierBudget": "tier-1",
  "approvalPoints": [
    "form_submission",
    "purchase_action"
  ],
  "approvalRequired": false,
  "maxSteps": 15,
  "maxDurationSec": 300,
  "riskTier": "moderate",
  "successCriteria": [
    "browser_session_lifecycle_action_completed"
  ],
  "rollbackPlan": "Close browser session and discard pending actions.",
  "fallbackLoopChain": [
    "research-loop-v1"
  ],
  "terminationPolicy": "safe_stop_and_report",
  "writebacks": {
    "memory": true,
    "logs": true,
    "actionArtifacts": true,
    "auditTrail": true
  },
  "outputContract": {
    "summaryRequired": true,
    "confidenceRequired": true,
    "evidenceRequired": true,
    "actionsRequired": true,
    "nextRequired": false
  },
  "loopLifecycleStates": [
    "queued",
    "preflight",
    "context-build",
    "reason",
    "act",
    "verify",
    "commit",
    "archive"
  ],
  "guardrails": {
    "confidenceThreshold": 0.6,
    "toolFailureBudget": 3,
    "sideEffectApprovalRequired": true
  },
  "composition": {
    "canBeCalledBy": [
      "ralph-loop-v1"
    ],
    "canCall": []
  }
}
