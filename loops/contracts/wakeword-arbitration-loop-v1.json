{
  "loopId": "wakeword-arbitration-loop-v1",
  "version": "1.0.0",
  "displayName": "Wakeword Arbitration Loop",
  "description": "Arbitrates wake word detection events filtering false positives and routing confirmed activations to talk loop.",
  "ownerAgent": "wake-word-agent",
  "category": "integration-voice",
  "tier": "B",
  "dependencyLayer": "integration",
  "priority": 64,
  "triggerTypes": [
    "event"
  ],
  "triggerClass": "event-triggered",
  "cadence": {
    "default": "event-driven"
  },
  "entryCriteria": [
    "wake_word_detection_event_received_for_arbitration"
  ],
  "hardStops": [
    "budget_exhausted",
    "operator_abort",
    "wakeword-arbitration-loop_critical_failure"
  ],
  "requiredContext": [
    "AGENTS.md",
    "integration-voice_context"
  ],
  "thinkingPolicy": {
    "default": "medium",
    "escalateTo": "high",
    "escalateOn": [
      "transcription_confidence_low"
    ],
    "deescalateOn": [
      "budget_pressure"
    ]
  },
  "allowedTools": [
    "voice.stream",
    "stt.transcribe",
    "tts.synthesize",
    "memory.write"
  ],
  "forbiddenTools": [
    "host.exec",
    "browser.navigate",
    "email.send"
  ],
  "toolTierBudget": "tier-1",
  "approvalPoints": [],
  "approvalRequired": false,
  "maxSteps": 12,
  "maxDurationSec": 300,
  "riskTier": "safe",
  "successCriteria": [
    "wake_word_arbitrated_activation_routed"
  ],
  "rollbackPlan": "End voice stream gracefully and log incomplete interaction.",
  "fallbackLoopChain": [],
  "terminationPolicy": "safe_stop_and_report",
  "writebacks": {
    "memory": true,
    "logs": true,
    "actionArtifacts": true,
    "auditTrail": false
  },
  "outputContract": {
    "summaryRequired": true,
    "confidenceRequired": true,
    "evidenceRequired": false,
    "actionsRequired": false,
    "nextRequired": false
  },
  "loopLifecycleStates": [
    "queued",
    "preflight",
    "context-build",
    "reason",
    "act",
    "verify",
    "commit",
    "archive"
  ],
  "guardrails": {
    "confidenceThreshold": 0.5,
    "toolFailureBudget": 3,
    "sideEffectApprovalRequired": false
  },
  "composition": {
    "canBeCalledBy": [
      "ralph-loop-v1"
    ],
    "canCall": []
  }
}
