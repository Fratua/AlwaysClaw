{
  "loopId": "secret-rotation-loop-v1",
  "version": "1.0.0",
  "displayName": "Secret Rotation Loop",
  "description": "Rotates secrets and credentials on schedule or on-demand with target completion under 15 minutes.",
  "ownerAgent": "secret-hygiene-agent",
  "category": "security",
  "tier": "A",
  "dependencyLayer": "security",
  "priority": 69,
  "triggerTypes": [
    "event"
  ],
  "triggerClass": "always-on",
  "cadence": {
    "default": "continuous"
  },
  "entryCriteria": [
    "secret_rotation_schedule_reached_or_breach_detected"
  ],
  "hardStops": [
    "budget_exhausted",
    "operator_abort",
    "secret-rotation-loop_critical_failure"
  ],
  "requiredContext": [
    "AGENTS.md",
    "security_context"
  ],
  "thinkingPolicy": {
    "default": "high",
    "escalateTo": "xhigh",
    "escalateOn": [
      "active_threat_detected"
    ],
    "deescalateOn": [
      "false_positive_confirmed"
    ]
  },
  "allowedTools": [
    "memory.search",
    "memory.write",
    "config.read",
    "metrics.query",
    "auth.verify"
  ],
  "forbiddenTools": [
    "host.exec",
    "browser.navigate"
  ],
  "toolTierBudget": "tier-1",
  "approvalPoints": [
    "privilege_escalation"
  ],
  "approvalRequired": false,
  "maxSteps": 15,
  "maxDurationSec": 300,
  "riskTier": "high",
  "successCriteria": [
    "secrets_rotated_within_target_time_window"
  ],
  "rollbackPlan": "Revert to last known secure state and alert operator.",
  "fallbackLoopChain": [
    "incident-containment-loop-v1"
  ],
  "terminationPolicy": "hard_stop_and_alert",
  "writebacks": {
    "memory": true,
    "logs": true,
    "actionArtifacts": true,
    "auditTrail": true
  },
  "outputContract": {
    "summaryRequired": true,
    "confidenceRequired": true,
    "evidenceRequired": true,
    "actionsRequired": true,
    "nextRequired": true
  },
  "loopLifecycleStates": [
    "queued",
    "preflight",
    "context-build",
    "reason",
    "act",
    "verify",
    "commit",
    "archive"
  ],
  "guardrails": {
    "confidenceThreshold": 0.7,
    "toolFailureBudget": 2,
    "sideEffectApprovalRequired": true
  },
  "composition": {
    "canBeCalledBy": [
      "ralph-loop-v1"
    ],
    "canCall": []
  }
}
