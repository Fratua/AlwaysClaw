{
  "loopId": "sms-inbound-processing-loop-v1",
  "version": "1.0.0",
  "displayName": "SMS Inbound Processing Loop",
  "description": "Processes verified inbound SMS messages through normalization, session routing, and response generation pipeline.",
  "ownerAgent": "twilio-sms-agent",
  "category": "integration-twilio",
  "tier": "A",
  "dependencyLayer": "integration",
  "priority": 57,
  "triggerTypes": [
    "event"
  ],
  "triggerClass": "always-on",
  "cadence": {
    "default": "event-driven"
  },
  "entryCriteria": [
    "verified_inbound_sms_message_ready_for_processing"
  ],
  "hardStops": [
    "budget_exhausted",
    "operator_abort",
    "sms-inbound-processing-loop_critical_failure"
  ],
  "requiredContext": [
    "AGENTS.md",
    "integration-twilio_context"
  ],
  "thinkingPolicy": {
    "default": "medium",
    "escalateTo": "high",
    "escalateOn": [
      "signature_mismatch"
    ],
    "deescalateOn": [
      "budget_pressure"
    ]
  },
  "allowedTools": [
    "twilio.api",
    "memory.write",
    "config.read"
  ],
  "forbiddenTools": [
    "host.exec",
    "browser.navigate"
  ],
  "toolTierBudget": "tier-1",
  "approvalPoints": [],
  "approvalRequired": false,
  "maxSteps": 12,
  "maxDurationSec": 180,
  "riskTier": "safe",
  "successCriteria": [
    "inbound_sms_processed_through_session_pipeline"
  ],
  "rollbackPlan": "Abort Twilio operation and log security event if signature invalid.",
  "fallbackLoopChain": [
    "research-loop-v1"
  ],
  "terminationPolicy": "retry_then_escalate",
  "writebacks": {
    "memory": true,
    "logs": true,
    "actionArtifacts": true,
    "auditTrail": true
  },
  "outputContract": {
    "summaryRequired": true,
    "confidenceRequired": false,
    "evidenceRequired": false,
    "actionsRequired": true,
    "nextRequired": false
  },
  "loopLifecycleStates": [
    "queued",
    "preflight",
    "context-build",
    "reason",
    "act",
    "verify",
    "commit",
    "archive"
  ],
  "guardrails": {
    "confidenceThreshold": 0.5,
    "toolFailureBudget": 3,
    "sideEffectApprovalRequired": false
  },
  "composition": {
    "canBeCalledBy": [
      "ralph-loop-v1"
    ],
    "canCall": []
  }
}
