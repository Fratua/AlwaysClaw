{
  "loopId": "thinking-level-controller-loop-v1",
  "version": "1.0.0",
  "displayName": "Thinking-Level Controller Loop",
  "description": "Selects thinking effort level (medium/high/xhigh) per request based on task complexity and budget constraints.",
  "ownerAgent": "thinking-control-agent",
  "category": "runtime",
  "tier": "B",
  "dependencyLayer": "runtime-orchestration",
  "priority": 43,
  "triggerTypes": [
    "event"
  ],
  "triggerClass": "always-on",
  "cadence": {
    "default": "continuous"
  },
  "entryCriteria": [
    "new_request_requires_thinking_level_selection"
  ],
  "hardStops": [
    "budget_exhausted",
    "operator_abort",
    "thinking-level-controller-loop_critical_failure"
  ],
  "requiredContext": [
    "AGENTS.md",
    "runtime_context"
  ],
  "thinkingPolicy": {
    "default": "medium",
    "escalateTo": "high",
    "escalateOn": [
      "repeated_failure"
    ],
    "deescalateOn": [
      "budget_pressure"
    ]
  },
  "allowedTools": [
    "memory.search",
    "metrics.query",
    "config.read"
  ],
  "forbiddenTools": [
    "host.exec",
    "browser.navigate",
    "email.send"
  ],
  "toolTierBudget": "tier-0",
  "approvalPoints": [],
  "approvalRequired": false,
  "maxSteps": 10,
  "maxDurationSec": 120,
  "riskTier": "safe",
  "successCriteria": [
    "thinking_level_selected_for_request_context"
  ],
  "rollbackPlan": "Revert to previous state and emit error event.",
  "fallbackLoopChain": [
    "retry-orchestration-loop-v1"
  ],
  "terminationPolicy": "retry_then_escalate",
  "writebacks": {
    "memory": false,
    "logs": true,
    "actionArtifacts": false,
    "auditTrail": true
  },
  "outputContract": {
    "summaryRequired": true,
    "confidenceRequired": false,
    "evidenceRequired": false,
    "actionsRequired": false,
    "nextRequired": false
  },
  "loopLifecycleStates": [
    "queued",
    "preflight",
    "context-build",
    "reason",
    "act",
    "verify",
    "commit",
    "archive"
  ],
  "guardrails": {
    "confidenceThreshold": 0.5,
    "toolFailureBudget": 3,
    "sideEffectApprovalRequired": false
  },
  "composition": {
    "canBeCalledBy": [
      "ralph-loop-v1"
    ],
    "canCall": []
  }
}
