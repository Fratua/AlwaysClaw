{
  "loopId": "watchdog-recovery-loop-v1",
  "version": "1.0.0",
  "displayName": "Watchdog Recovery Loop",
  "description": "Executes watchdog recovery with max 5 restart attempts in 15 minutes before entering degraded mode.",
  "ownerAgent": "observability-agent",
  "category": "reliability",
  "tier": "A",
  "dependencyLayer": "reliability",
  "priority": 73,
  "triggerTypes": [
    "cron",
    "event"
  ],
  "triggerClass": "always-on",
  "cadence": {
    "default": "daily"
  },
  "entryCriteria": [
    "component_health_check_failed_recovery_needed"
  ],
  "hardStops": [
    "budget_exhausted",
    "operator_abort",
    "watchdog-recovery-loop_critical_failure"
  ],
  "requiredContext": [
    "AGENTS.md",
    "reliability_context"
  ],
  "thinkingPolicy": {
    "default": "medium",
    "escalateTo": "high",
    "escalateOn": [
      "slo_breach_imminent"
    ],
    "deescalateOn": [
      "budget_pressure"
    ]
  },
  "allowedTools": [
    "metrics.query",
    "memory.write",
    "config.read",
    "health.check"
  ],
  "forbiddenTools": [
    "host.exec",
    "browser.navigate",
    "email.send"
  ],
  "toolTierBudget": "tier-0",
  "approvalPoints": [],
  "approvalRequired": false,
  "maxSteps": 14,
  "maxDurationSec": 300,
  "riskTier": "safe",
  "successCriteria": [
    "failed_component_recovered_or_degraded_mode_entered"
  ],
  "rollbackPlan": "Log failure and defer to next scheduled run.",
  "fallbackLoopChain": [
    "restart-governor-loop-v1"
  ],
  "terminationPolicy": "safe_stop_and_report",
  "writebacks": {
    "memory": false,
    "logs": true,
    "actionArtifacts": true,
    "auditTrail": true
  },
  "outputContract": {
    "summaryRequired": true,
    "confidenceRequired": false,
    "evidenceRequired": true,
    "actionsRequired": false,
    "nextRequired": true
  },
  "loopLifecycleStates": [
    "queued",
    "preflight",
    "context-build",
    "reason",
    "act",
    "verify",
    "commit",
    "archive"
  ],
  "guardrails": {
    "confidenceThreshold": 0.5,
    "toolFailureBudget": 3,
    "sideEffectApprovalRequired": false
  },
  "composition": {
    "canBeCalledBy": [
      "ralph-loop-v1"
    ],
    "canCall": []
  }
}
