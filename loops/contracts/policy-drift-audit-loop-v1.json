{
  "loopId": "policy-drift-audit-loop-v1",
  "version": "1.0.0",
  "displayName": "Policy Drift Audit Loop",
  "description": "Audits active security policies against baseline detecting unauthorized drift in tool tiers and access rules.",
  "ownerAgent": "security-audit-agent",
  "category": "security",
  "tier": "B",
  "dependencyLayer": "security",
  "priority": 72,
  "triggerTypes": [
    "event"
  ],
  "triggerClass": "always-on",
  "cadence": {
    "default": "continuous"
  },
  "entryCriteria": [
    "policy_audit_schedule_reached_or_drift_signal"
  ],
  "hardStops": [
    "budget_exhausted",
    "operator_abort",
    "policy-drift-audit-loop_critical_failure"
  ],
  "requiredContext": [
    "AGENTS.md",
    "security_context"
  ],
  "thinkingPolicy": {
    "default": "high",
    "escalateTo": "xhigh",
    "escalateOn": [
      "active_threat_detected"
    ],
    "deescalateOn": [
      "false_positive_confirmed"
    ]
  },
  "allowedTools": [
    "memory.search",
    "memory.write",
    "config.read",
    "metrics.query",
    "auth.verify"
  ],
  "forbiddenTools": [
    "host.exec",
    "browser.navigate"
  ],
  "toolTierBudget": "tier-1",
  "approvalPoints": [
    "privilege_escalation"
  ],
  "approvalRequired": false,
  "maxSteps": 15,
  "maxDurationSec": 300,
  "riskTier": "moderate",
  "successCriteria": [
    "policy_audit_completed_drift_report_generated"
  ],
  "rollbackPlan": "Revert to last known secure state and alert operator.",
  "fallbackLoopChain": [
    "incident-containment-loop-v1"
  ],
  "terminationPolicy": "hard_stop_and_alert",
  "writebacks": {
    "memory": true,
    "logs": true,
    "actionArtifacts": true,
    "auditTrail": true
  },
  "outputContract": {
    "summaryRequired": true,
    "confidenceRequired": true,
    "evidenceRequired": true,
    "actionsRequired": true,
    "nextRequired": true
  },
  "loopLifecycleStates": [
    "queued",
    "preflight",
    "context-build",
    "reason",
    "act",
    "verify",
    "commit",
    "archive"
  ],
  "guardrails": {
    "confidenceThreshold": 0.7,
    "toolFailureBudget": 2,
    "sideEffectApprovalRequired": true
  },
  "composition": {
    "canBeCalledBy": [
      "ralph-loop-v1"
    ],
    "canCall": []
  }
}
