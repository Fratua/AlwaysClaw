{
  "loopId": "memory-compaction-trigger-loop-v1",
  "version": "1.0.0",
  "displayName": "Memory Compaction Trigger Loop",
  "description": "Monitors context pressure thresholds and triggers auto-compaction with summary/archival/usage tracking behavior.",
  "ownerAgent": "compaction-agent",
  "category": "context-memory",
  "tier": "A",
  "dependencyLayer": "context-memory",
  "priority": 48,
  "triggerTypes": [
    "event",
    "cron"
  ],
  "triggerClass": "always-on",
  "cadence": {
    "default": "daily"
  },
  "entryCriteria": [
    "context_pressure_exceeds_compaction_threshold"
  ],
  "hardStops": [
    "budget_exhausted",
    "operator_abort",
    "memory-compaction-trigger-loop_critical_failure"
  ],
  "requiredContext": [
    "AGENTS.md",
    "context-memory_context"
  ],
  "thinkingPolicy": {
    "default": "medium",
    "escalateTo": "high",
    "escalateOn": [
      "data_inconsistency"
    ],
    "deescalateOn": [
      "budget_pressure"
    ]
  },
  "allowedTools": [
    "memory.search",
    "memory.write",
    "file.read",
    "config.read"
  ],
  "forbiddenTools": [
    "host.exec",
    "browser.navigate",
    "email.send"
  ],
  "toolTierBudget": "tier-0",
  "approvalPoints": [],
  "approvalRequired": false,
  "maxSteps": 14,
  "maxDurationSec": 300,
  "riskTier": "safe",
  "successCriteria": [
    "compaction_triggered_context_pressure_reduced"
  ],
  "rollbackPlan": "Discard pending writes and retain current state.",
  "fallbackLoopChain": [
    "research-loop-v1"
  ],
  "terminationPolicy": "safe_stop_and_report",
  "writebacks": {
    "memory": true,
    "logs": true,
    "actionArtifacts": false,
    "auditTrail": false
  },
  "outputContract": {
    "summaryRequired": true,
    "confidenceRequired": false,
    "evidenceRequired": false,
    "actionsRequired": false,
    "nextRequired": true
  },
  "loopLifecycleStates": [
    "queued",
    "preflight",
    "context-build",
    "reason",
    "act",
    "verify",
    "commit",
    "archive"
  ],
  "guardrails": {
    "confidenceThreshold": 0.5,
    "toolFailureBudget": 3,
    "sideEffectApprovalRequired": false
  },
  "composition": {
    "canBeCalledBy": [
      "ralph-loop-v1"
    ],
    "canCall": []
  }
}
