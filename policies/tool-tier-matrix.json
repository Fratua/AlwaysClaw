{
  "version": "1.0.0",
  "description": "Tool categorization matrix defining three tiers of tool access with agent role overrides and path controls.",
  "tiers": {
    "tier0-readonly": {
      "description": "Read-only tools safe for normal automation. No side effects, no approval required.",
      "tools": [
        "memory.search",
        "memory.read",
        "scheduler.list",
        "tasks.read",
        "loops.inspect",
        "metrics.query",
        "health.probe",
        "config.read",
        "browser.screenshot",
        "browser.read",
        "stt.transcribe",
        "gmail.read",
        "twilio.status",
        "auth.verify",
        "secrets.list",
        "slo.check",
        "logs.read",
        "presence.query",
        "context.inspect"
      ],
      "defaultPolicy": {
        "allowed": true,
        "approvalRequired": false,
        "auditLevel": "standard",
        "rateLimitPerMinute": 120
      }
    },
    "tier1-reversible": {
      "description": "Reversible write tools allowed in approved loops. Side effects are constrained and recoverable.",
      "tools": [
        "memory.write",
        "memory.compact",
        "tasks.write",
        "tasks.update",
        "scheduler.create",
        "scheduler.update",
        "config.patch",
        "browser.navigate",
        "browser.click",
        "browser.type",
        "gmail.label",
        "gmail.archive",
        "gmail.markRead",
        "twilio.sms.send",
        "tts.synthesize",
        "voice.answer",
        "logs.write",
        "metrics.emit",
        "hooks.dispatch",
        "presence.update",
        "context.compile",
        "proposals.create"
      ],
      "defaultPolicy": {
        "allowed": true,
        "approvalRequired": false,
        "auditLevel": "detailed",
        "rateLimitPerMinute": 60,
        "requiresApprovedLoop": true
      }
    },
    "tier2-irreversible": {
      "description": "Irreversible or high-risk tools requiring explicit human approval. Cannot execute in unattended mode.",
      "tools": [
        "gmail.send",
        "gmail.delete",
        "gmail.forward",
        "twilio.call.create",
        "twilio.sms.bulkSend",
        "browser.formSubmit",
        "browser.purchase",
        "browser.download",
        "browser.accountChange",
        "browser.evaluateJs",
        "host.exec",
        "host.install",
        "host.serviceModify",
        "host.registryModify",
        "host.networkExpose",
        "secrets.rotate",
        "secrets.create",
        "secrets.delete",
        "config.reset",
        "config.overwrite",
        "loops.forceTerminate",
        "loops.policyOverride",
        "auth.pair",
        "auth.revoke",
        "auth.elevate",
        "incidents.contain",
        "incidents.rotate"
      ],
      "defaultPolicy": {
        "allowed": false,
        "approvalRequired": true,
        "auditLevel": "forensic",
        "rateLimitPerMinute": 10,
        "requiresApprovedLoop": true,
        "unattendedExecution": false,
        "dualCheckpoint": true
      }
    }
  },
  "agentRoleOverrides": {
    "ownerTrustedAgent": {
      "description": "Full host permissions with approval gates for destructive actions only.",
      "tier0": { "allowed": true, "approvalRequired": false },
      "tier1": { "allowed": true, "approvalRequired": false },
      "tier2": { "allowed": true, "approvalRequired": true, "unattendedExecution": false }
    },
    "specialistAgent": {
      "description": "Constrained permissions by tool tier and path allowlist.",
      "tier0": { "allowed": true, "approvalRequired": false },
      "tier1": { "allowed": true, "approvalRequired": false, "pathRestricted": true },
      "tier2": { "allowed": false, "approvalRequired": true, "unattendedExecution": false, "elevationAvailable": true }
    },
    "publicFacingAgent": {
      "description": "No direct host exec. Browser read-only unless explicitly elevated.",
      "tier0": { "allowed": true, "approvalRequired": false },
      "tier1": {
        "allowed": true,
        "approvalRequired": false,
        "excludedTools": [
          "browser.navigate",
          "browser.click",
          "browser.type",
          "twilio.sms.send",
          "hooks.dispatch"
        ]
      },
      "tier2": { "allowed": false, "approvalRequired": true, "unattendedExecution": false, "elevationAvailable": false }
    }
  },
  "pathAllowlists": {
    "default": [
      "C:\\AlwaysClaw\\",
      "C:\\AlwaysClaw\\state\\",
      "C:\\AlwaysClaw\\state\\agents\\",
      "C:\\AlwaysClaw\\state\\memory\\",
      "C:\\AlwaysClaw\\state\\logs\\",
      "C:\\AlwaysClaw\\state\\config\\",
      "C:\\AlwaysClaw\\state\\cron\\"
    ],
    "blocked": [
      "C:\\Windows\\System32\\",
      "C:\\Windows\\SysWOW64\\",
      "C:\\Users\\*\\AppData\\Local\\Microsoft\\Credentials\\",
      "C:\\Users\\*\\AppData\\Roaming\\Microsoft\\Credentials\\",
      "C:\\Users\\*\\.ssh\\",
      "C:\\Users\\*\\.gnupg\\",
      "HKLM\\",
      "HKCU\\SOFTWARE\\Microsoft\\Windows\\CurrentVersion\\Run\\",
      "C:\\ProgramData\\Microsoft\\Crypto\\"
    ]
  },
  "commandReviewRequired": [
    "npm install",
    "npm uninstall",
    "pip install",
    "pip uninstall",
    "choco install",
    "choco uninstall",
    "winget install",
    "winget uninstall",
    "sc create",
    "sc delete",
    "sc config",
    "schtasks /create",
    "schtasks /delete",
    "netsh advfirewall",
    "netsh interface portproxy",
    "reg add",
    "reg delete",
    "wsl --import",
    "wsl --unregister",
    "Set-ExecutionPolicy",
    "New-NetFirewallRule",
    "Remove-NetFirewallRule"
  ]
}
