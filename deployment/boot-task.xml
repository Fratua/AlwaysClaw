<?xml version="1.0" encoding="UTF-16"?>
<!--
  AlwaysClaw Windows Task Scheduler composite task definition.

  Registers three triggers:
    1. Startup bootstrap  - runs wsl2-setup.ps1 at system boot / user logon
    2. Watchdog           - runs watchdog.ps1 every 5 minutes
    3. Daily maintenance  - runs log/archive maintenance at 03:00 daily

  Reference: Master Plan Sections 28, 35, 44

  Import via:
    Register-ScheduledTask -Xml (Get-Content boot-task.xml -Raw) `
      -TaskName 'AlwaysClaw-Bootstrap' -TaskPath '\AlwaysClaw\' -Force

  Or via schtasks:
    schtasks /Create /TN "\AlwaysClaw\Bootstrap" /XML "boot-task.xml" /F
-->
<Task version="1.4"
      xmlns="http://schemas.microsoft.com/windows/2004/02/mit/task">

  <!-- ================================================================== -->
  <!-- Registration info                                                   -->
  <!-- ================================================================== -->
  <RegistrationInfo>
    <Description>AlwaysClaw: WSL2 boot, watchdog, and daily maintenance tasks.</Description>
    <Author>AlwaysClaw</Author>
    <URI>\AlwaysClaw\Bootstrap</URI>
  </RegistrationInfo>

  <!-- ================================================================== -->
  <!-- Triggers                                                            -->
  <!-- ================================================================== -->
  <Triggers>

    <!-- Trigger 1: Startup bootstrap at logon -->
    <LogonTrigger>
      <Enabled>true</Enabled>
      <Delay>PT30S</Delay>
    </LogonTrigger>

    <!-- Trigger 2: Boot-level startup (before any user logon) -->
    <BootTrigger>
      <Enabled>true</Enabled>
      <Delay>PT60S</Delay>
    </BootTrigger>

    <!-- Trigger 3: Watchdog every 5 minutes (repetition on a calendar trigger) -->
    <TimeTrigger>
      <Enabled>true</Enabled>
      <StartBoundary>2026-01-01T00:00:00</StartBoundary>
      <Repetition>
        <Interval>PT5M</Interval>
        <StopAtDurationEnd>false</StopAtDurationEnd>
      </Repetition>
    </TimeTrigger>

    <!-- Trigger 4: Daily log/archive maintenance at 03:00 -->
    <CalendarTrigger>
      <Enabled>true</Enabled>
      <StartBoundary>2026-01-01T03:00:00</StartBoundary>
      <ScheduleByDay>
        <DaysInterval>1</DaysInterval>
      </ScheduleByDay>
    </CalendarTrigger>

  </Triggers>

  <!-- ================================================================== -->
  <!-- Principal (run as SYSTEM with highest privileges)                   -->
  <!-- ================================================================== -->
  <Principals>
    <Principal id="Author">
      <UserId>S-1-5-18</UserId>
      <RunLevel>HighestAvailable</RunLevel>
      <LogonType>ServiceAccount</LogonType>
    </Principal>
  </Principals>

  <!-- ================================================================== -->
  <!-- Settings                                                            -->
  <!-- ================================================================== -->
  <Settings>
    <MultipleInstancesPolicy>IgnoreNew</MultipleInstancesPolicy>
    <DisallowStartIfOnBatteries>false</DisallowStartIfOnBatteries>
    <StopIfGoingOnBatteries>false</StopIfGoingOnBatteries>
    <AllowHardTerminate>true</AllowHardTerminate>
    <StartWhenAvailable>true</StartWhenAvailable>
    <RunOnlyIfNetworkAvailable>false</RunOnlyIfNetworkAvailable>
    <AllowStartOnDemand>true</AllowStartOnDemand>
    <Enabled>true</Enabled>
    <Hidden>false</Hidden>
    <RunOnlyIfIdle>false</RunOnlyIfIdle>
    <WakeToRun>true</WakeToRun>
    <ExecutionTimeLimit>PT30M</ExecutionTimeLimit>
    <Priority>4</Priority>
    <RestartOnFailure>
      <Interval>PT2M</Interval>
      <Count>3</Count>
    </RestartOnFailure>
    <IdleSettings>
      <StopOnIdleEnd>false</StopOnIdleEnd>
      <RestartOnIdle>false</RestartOnIdle>
    </IdleSettings>
  </Settings>

  <!-- ================================================================== -->
  <!-- Actions                                                             -->
  <!--                                                                     -->
  <!-- Note: Windows Task Scheduler allows multiple actions per task.      -->
  <!-- The boot/logon triggers run the bootstrap. The 5-minute timer runs  -->
  <!-- the watchdog. The daily trigger runs maintenance. Since all actions  -->
  <!-- run on all triggers, each script must handle being called outside   -->
  <!-- its primary trigger gracefully (idempotent design).                 -->
  <!--                                                                     -->
  <!-- For cleaner separation, use Register-ScheduledTasks in the setup    -->
  <!-- script which creates individual schtask entries per concern.        -->
  <!-- This XML serves as a single-import fallback.                        -->
  <!-- ================================================================== -->
  <Actions Context="Author">

    <!-- Action 1: Startup bootstrap (WSL2 setup + health check) -->
    <Exec>
      <Command>powershell.exe</Command>
      <Arguments>-NoProfile -ExecutionPolicy Bypass -File "C:\AlwaysClaw\deployment\wsl2-setup.ps1"</Arguments>
      <WorkingDirectory>C:\AlwaysClaw\deployment</WorkingDirectory>
    </Exec>

    <!-- Action 2: Watchdog (exponential backoff restart logic) -->
    <Exec>
      <Command>powershell.exe</Command>
      <Arguments>-NoProfile -ExecutionPolicy Bypass -File "C:\AlwaysClaw\deployment\watchdog.ps1"</Arguments>
      <WorkingDirectory>C:\AlwaysClaw\deployment</WorkingDirectory>
    </Exec>

    <!-- Action 3: Health check (structured JSON report) -->
    <Exec>
      <Command>powershell.exe</Command>
      <Arguments>-NoProfile -ExecutionPolicy Bypass -File "C:\AlwaysClaw\deployment\health-check.ps1"</Arguments>
      <WorkingDirectory>C:\AlwaysClaw\deployment</WorkingDirectory>
    </Exec>

  </Actions>

</Task>
