# OpenClawAgent Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================
# SERVICE CONFIGURATION
# ============================================
NODE_ENV=development
LOG_LEVEL=info
CONTROL_PORT=8080
CONTROL_HOST=127.0.0.1

# ============================================
# AI/LLM CONFIGURATION (OpenAI GPT-5.2)
# ============================================
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-5.2

# Azure OpenAI (alternative)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_KEY=your-azure-key
AZURE_OPENAI_DEPLOYMENT=your-deployment-name

# ============================================
# GMAIL CONFIGURATION
# ============================================
GMAIL_CLIENT_ID=your-google-client-id
GMAIL_CLIENT_SECRET=your-google-client-secret
GMAIL_REDIRECT_URI=http://localhost:3000/oauth2callback
GMAIL_REFRESH_TOKEN=your-refresh-token

# ============================================
# TWILIO CONFIGURATION
# ============================================
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ============================================
# AZURE SPEECH SERVICES (TTS/STT)
# ============================================
AZURE_SPEECH_KEY=your-azure-speech-key
AZURE_SPEECH_REGION=westus2

# ============================================
# ELEVENLABS TTS (optional, high quality)
# ============================================
ELEVENLABS_API_KEY=your-elevenlabs-key
ELEVENLABS_VOICE_ID=your-voice-id

# ============================================
# BROWSER AUTOMATION
# ============================================
# Playwright/Puppeteer settings
BROWSER_HEADLESS=true
BROWSER_TIMEOUT=30000
BROWSER_USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.0"

# ============================================
# WINDOWS SERVICE
# ============================================
SERVICE_NAME=OpenClawAgent
SERVICE_DISPLAY_NAME="OpenClaw AI Agent Service"
SERVICE_DESCRIPTION="24/7 AI agent service for Windows"

# ============================================
# MEMORY & STATE
# ============================================
MEMORY_DIR=./memory
STATE_FILE=./state/agent-state.json
MEMORY_DB_PATH=./data/memory.db

# ============================================
# PYTHON BRIDGE
# ============================================
PYTHON_EXECUTABLE=python

# ============================================
# SECURITY
# ============================================
# Encryption key for sensitive data (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=your-32-byte-hex-key

# ============================================
# MONITORING
# ============================================
METRICS_ENABLED=true
METRICS_PORT=9090
