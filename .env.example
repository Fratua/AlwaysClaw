# ============================================
# OpenClaw Agent - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values

# ── OpenAI / GPT-5.2 ──
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-5.2
# Valid values: none, low, medium, high, xhigh
# xhigh allows 5-10 min extended thinking (GPT-5.2+)
OPENAI_THINKING_MODE=high

# ── Agent Identity ──
AGENT_ID=agent-001

# ── Database (PostgreSQL) ──
DB_PASSWORD=change-me-in-production

# ── Monitoring (Grafana) ──
GRAFANA_USER=admin
GRAFANA_PASSWORD=change-me-in-production
GRAFANA_URL=http://localhost:3000

# ── Control Server ──
CONTROL_API_KEY=
CONTROL_PORT=8080
CONTROL_HOST=127.0.0.1
CONTROL_CORS_ORIGIN=

# ── Runtime ──
LOG_LEVEL=INFO
ENVIRONMENT=development
